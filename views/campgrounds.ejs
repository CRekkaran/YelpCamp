<% include partials/header %>
	
 <div class="container">          <!-- SEE THIS DOCUMENTATION -->
  <header class="jumbotron">      <!-- Bootstrap class jumbotron SEE THIS ALSO!!-->
  	 	<div class="container">
		  	<h1>Welcome <%= username %>, to YelpCamp</h1>
		  	<p>Veiw all the hand-picked campgrounds from all over the world</p>
		    <p>
		  	 <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campgound</a>  <!-- btn-primary for color--><!-- btn stands for button classes in bootstrap-->
		  	</p>
	 	</div> 	 
  </header>
		  


 <div class="row">                            <!-- WHAT The F/ IS THIS! -->
 	<div class="col-lg-12">
 		<h3><span class="glyphicon glyphicon-th"></span> Our most popular site</h3>
 	</div>
 </div>	


 <a href="/">Go to homepage</a>
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">  
	 <% campgrounds.forEach(function(x){ %>
		<div class="col-md-3 col-sm-6">	
			<div class="thumbnail">
				<img src="<%= x.image %>">
				<div class="caption">
					<h4><%= x.name %></h4>
				</div>
				<p>
					<a href="campgrounds/<%= x._id %>" class="btn btn-primary">More info</a> <!-- x._id retrieves unique id from database of the every indivisual campground  -->
				</p>	
			</div>
		</div>	
	 <% }); %>
	</div> 
 </div>
