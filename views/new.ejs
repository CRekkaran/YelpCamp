<% include partials/header %>
<div class="container">
	<div class="row">
		<a class="btn btn-primary btn-large" href="/campgrounds">Go Back</a>
		<h1 style="text-align: center;">Create a new campground</h1>
		<div style="width: 30%; margin:25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
				  <input class="form-control" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group"> <!--form-group is to group indented various inputs and make it somewhat seperated from other <input> -->
				 <input class="form-control" type="text" name="image" placeholder="image-url"><!-- form-control includes styles for general appearance, focus state, sizing, and more. -->
				</div>
				<div class="form-group">
				  <input class="form-control" type="text" name="Description" placeholder="Discription">
				</div>
				<div class="form-group"> 
				 <button class="btn btn-lg btn-info">Submit</button><!--btn-info is for the color where info is for cyan, default is for white, secondary and more.. -->
				</div> 
			</form>	
		</div>	
	</div>
	
</div>
